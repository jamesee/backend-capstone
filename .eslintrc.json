{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "none", "ignoreRestSiblings": false }
    ],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "jest/expect-expect": [
      "error",
      { "assertFunctionNames": ["expect", "request.**.expect"] }
    ]
  }
}
